<tc-config xmlns="http://www.terracotta.org/config" xmlns:data="http://www.terracottatech.com/config/data-roots" xmlns:ohr="http://www.terracotta.org/config/offheap-resource" xmlns:persistence="http://www.terracottatech.com/config/platform-persistence">
  <plugins>
    <config>
      <data:data-directories>
        <data:directory name="root1" use-for-platform="false">build/data1</data:directory>
      </data:data-directories>
    </config>
    <service>
      <persistence:platform-persistence data-directory-id="root1"/>
    </service>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="primary-server-resource" unit="MB">64</ohr:resource>
      </ohr:offheap-resources>
    </config>
    <config>
      <cl:cluster xmlns:cl="http://www.terracotta.org/config/cluster">
        <cl:name>testCluster</cl:name>
        <cl:stripe>
          <cl:name>stripe1</cl:name>
          <cl:node>
            <cl:name>testServer1</cl:name>
            <cl:server-config>
              <tc-config>
                <plugins>
                  <config>
                    <data:data-directories>
                      <data:directory name="root1" use-for-platform="false">build/data1</data:directory>
                    </data:data-directories>
                  </config>
                  <service>
                    <persistence:platform-persistence data-directory-id="root1"/>
                  </service>
                  <config>
                    <ohr:offheap-resources>
                      <ohr:resource name="primary-server-resource" unit="MB">64</ohr:resource>
                    </ohr:offheap-resources>
                  </config>
                </plugins>
                <tc-properties/>
                <servers>
                  <server bind="0.0.0.0" host="localhost" name="testServer1">
                    <logs>logs1</logs>
                    <tsa-port>9410</tsa-port>
                    <tsa-group-port>9430</tsa-group-port>
                  </server>
                  <server bind="0.0.0.0" host="localhost" name="testServer2">
                    <logs>logs2</logs>
                    <tsa-port>9510</tsa-port>
                    <tsa-group-port>9530</tsa-group-port>
                  </server>
                  <client-reconnect-window>120</client-reconnect-window>
                </servers>
                <failover-priority>
                  <availability/>
                </failover-priority>
              </tc-config>
            </cl:server-config>
          </cl:node>
          <cl:node>
            <cl:name>testServer2</cl:name>
            <cl:server-config>
              <tc-config>
                <plugins>
                  <config>
                    <data:data-directories>
                      <data:directory name="root1" use-for-platform="false">build/data1</data:directory>
                    </data:data-directories>
                  </config>
                  <service>
                    <persistence:platform-persistence data-directory-id="root1"/>
                  </service>
                  <config>
                    <ohr:offheap-resources>
                      <ohr:resource name="primary-server-resource" unit="MB">64</ohr:resource>
                    </ohr:offheap-resources>
                  </config>
                </plugins>
                <tc-properties/>
                <servers>
                  <server bind="0.0.0.0" host="localhost" name="testServer1">
                    <logs>logs1</logs>
                    <tsa-port>9410</tsa-port>
                    <tsa-group-port>9430</tsa-group-port>
                  </server>
                  <server bind="0.0.0.0" host="localhost" name="testServer2">
                    <logs>logs2</logs>
                    <tsa-port>9510</tsa-port>
                    <tsa-group-port>9530</tsa-group-port>
                  </server>
                  <client-reconnect-window>120</client-reconnect-window>
                </servers>
                <failover-priority>
                  <availability/>
                </failover-priority>
              </tc-config>
            </cl:server-config>
          </cl:node>
        </cl:stripe>
      </cl:cluster>
    </config>
  </plugins>
  <tc-properties/>
  <servers>
    <server bind="0.0.0.0" host="localhost" name="testServer1">
      <logs>logs1</logs>
      <tsa-port>9410</tsa-port>
      <tsa-group-port>9430</tsa-group-port>
    </server>
    <server bind="0.0.0.0" host="localhost" name="testServer2">
      <logs>logs2</logs>
      <tsa-port>9510</tsa-port>
      <tsa-group-port>9530</tsa-group-port>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
  <failover-priority>
    <availability/>
  </failover-priority>
</tc-config>
