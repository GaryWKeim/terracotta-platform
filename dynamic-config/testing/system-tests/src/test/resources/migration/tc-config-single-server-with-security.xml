<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr="http://www.terracotta.org/config/offheap-resource"
           xmlns:data="http://www.terracottatech.com/config/data-roots">
  <plugins>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="main" unit="MB">512</ohr:resource>
      </ohr:offheap-resources>
    </config>

    <config>
      <data:data-directories>
        <data:directory name="data" use-for-platform="true">%(user.dir)/metadata/stripe1</data:directory>
      </data:data-directories>
    </config>

    <service xmlns:security="http://www.terracottatech.com/config/security">
      <security:security>
        <security:security-root-directory>%(user.dir)/security/stripe1</security:security-root-directory>
        <security:ssl-tls/>
        <security:whitelist/>
      </security:security>
    </service>
  </plugins>

  <servers>
    <server host="localhost" name="node-1">
      <logs>%(user.dir)/logs/stripe1/node-1</logs>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
  <failover-priority>
    <availability/>
  </failover-priority>
</tc-config>