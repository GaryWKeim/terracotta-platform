<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr1="http://www.terracotta.org/config/offheap-resource"
           xmlns:persistence="http://www.terracottatech.com/config/platform-persistence"
           xmlns:ohr="http://www.terracottatech.com/config/data-roots">
  <plugins>
    <config>
      <ohr:data-directories>
        <ohr:directory name="root1">%(user.dir)/metadata/stripe2</ohr:directory>
      </ohr:data-directories>
    </config>
    <service>
      <backup-restore xmlns="http://www.terracottatech.com/config/backup-restore">
        <backup-location path="%(user.dir)/backup/stripe2"/>
      </backup-restore>
    </service>
    <service>
      <persistence:platform-persistence data-directory-id="root1"/>
    </service>
    <config>
      <ohr1:offheap-resources>
        <ohr1:resource name="primary-server-resource" unit="MB">64</ohr1:resource>
      </ohr1:offheap-resources>
    </config>
  </plugins>
  <tc-properties/>
  <servers>
    <server host="localhost" name="node-1">
      <logs>%(user.dir)/logs/stripe2/node-1</logs>
      <tsa-port>${PORT-1}</tsa-port>
      <tsa-group-port>${GROUP-PORT-1}</tsa-group-port>
    </server>
    <server host="localhost" name="node-2">
      <logs>%(user.dir)/logs/stripe2/node-2</logs>
      <tsa-port>${PORT-2}</tsa-port>
      <tsa-group-port>${GROUP-PORT-2}</tsa-group-port>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
  <failover-priority>
    <availability/>
  </failover-priority>
</tc-config>