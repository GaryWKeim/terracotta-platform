<configuration debug="false">

  <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c{1}:%L - %msg%n</pattern>
    </layout>
  </appender>

  <root level="OFF">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="org.terracotta.dynamic_config" level="TRACE" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.terracotta.nomad" level="TRACE" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.terracotta.persistence.sanskrit" level="TRACE" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.terracotta.diagnostic" level="TRACE" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="com.terracottatech.angela" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.terracotta.angela" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
</configuration>