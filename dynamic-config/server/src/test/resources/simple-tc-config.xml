<tc-config xmlns="http://www.terracotta.org/config" xmlns:data="http://www.terracottatech.com/config/data-roots" xmlns:ohr="http://www.terracotta.org/config/offheap-resource" xmlns:persistence="http://www.terracottatech.com/config/platform-persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.terracotta.org/config ../../../../../common/data-root-config/src/main/resources/data-roots-config.xsd http://www.terracottatech.com/config/data-roots ../../../../data-root-config/src/main/resources/data-roots-config.xsd http://www.terracottatech.com/config/platform-persistence ../../../../frs-platform-persistence/src/main/resources/platform-persistence.xsd http://www.terracottatech.com/config/backup-restore ../../../../../backup-and-restore/server/src/main/resources/backup-restore-config.xsd">
  <plugins>
    <config>
      <data:data-directories>
        <data:directory name="root1" use-for-platform="false">../data1</data:directory>
      </data:data-directories>
    </config>
    <service>
      <backup-restore xmlns="http://www.terracottatech.com/config/backup-restore">
        <backup-location path="target/tmp/backup"/>
      </backup-restore>
    </service>
    <service>
      <persistence:platform-persistence data-directory-id="root1"/>
    </service>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="primary-server-resource" unit="MB">64</ohr:resource>
      </ohr:offheap-resources>
    </config>
  </plugins>
  <tc-properties/>
  <servers>
    <server bind="0.0.0.0" host="localhost" name="testServer0">
      <logs>/export2/homes/kcleerem/server/passive/logs1</logs>
      <tsa-port>4164</tsa-port>
      <tsa-group-port>4165</tsa-group-port>
    </server>
    <server bind="0.0.0.0" host="localhost" name="testServer1">
      <logs>/export2/homes/kcleerem/server/passive/logs1</logs>
      <tsa-port>9510</tsa-port>
      <tsa-group-port>9630</tsa-group-port>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
</tc-config>