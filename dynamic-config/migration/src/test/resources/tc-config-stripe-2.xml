<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr1="http://www.terracotta.org/config/offheap-resource"
           xmlns:persistence="http://www.terracottatech.com/config/platform-persistence"
           xmlns:br="http://www.terracottatech.com/config/backup-restore"
           xmlns:ohr="http://www.terracottatech.com/config/data-roots">
  <plugins>
    <config>
      <ohr:data-directories>
        <ohr:directory name="root1">test/data2</ohr:directory>
      </ohr:data-directories>
    </config>
    <service>
      <br:backup-restore>
        <br:backup-location path="test/tmp/backup2"/>
      </br:backup-restore>
    </service>
    <service>
      <persistence:platform-persistence data-directory-id="root1"/>
    </service>
    <config>
      <ohr1:offheap-resources>
        <ohr1:resource name="primary-server-resource" unit="MB">64</ohr1:resource>
      </ohr1:offheap-resources>
    </config>
  </plugins>
  <tc-properties/>
  <servers>
    <server host="localhost" name="server-1">
      <logs>%H/terracotta-logs/logs21</logs>
      <tsa-port>9610</tsa-port>
      <tsa-group-port>9630</tsa-group-port>
    </server>
    <server host="localhost" name="server-2">
      <logs>%H/terracotta-logs/logs22</logs>
      <tsa-port>9710</tsa-port>
      <tsa-group-port>9730</tsa-group-port>
    </server>
    <server host="localhost" name="server-3">
      <logs>%H/terracotta-logs/logs23</logs>
      <tsa-port>9810</tsa-port>
      <tsa-group-port>9830</tsa-group-port>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
  <failover-priority>
    <availability/>
  </failover-priority>
</tc-config>